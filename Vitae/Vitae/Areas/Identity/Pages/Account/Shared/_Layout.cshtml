<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vitae</title>

    <link rel="stylesheet" href="~/css/account.min.css" />
    <partial name="_Styles" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="/">
                <img src="~/img/Logo_short_bicolor_four.png" title="Vitae" class="ml-1 pl-1 mr-2 pr-1" />&middot;<img src="~/img/Logo_white.png" class="ml-2 pl-1" title="Vitae" />
            </a>
        </nav>
    </header>
    @*<partial name="_CookieConsentPartial" />*@
    <main>
        @RenderBody()
    </main>
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-end small mr-5">
                <div class="text-muted">Copyright &copy; 2020, Vitae &middot; Made with ❤ in Switzerland</div>
                @*<div>
                        <a href="#">Privacy Policy</a>
                        &middot;
                        <a href="#">Terms &amp; Conditions</a>
                    </div>*@
            </div>
        </div>
    </footer>
    <partial name="_Scripts" />
    @RenderSection("Scripts", required: false)
</body>
</html>