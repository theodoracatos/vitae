@page
@model Vitae.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = @SharedResource.SignIn;
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="jumbotron">
                <form id="account" method="post">
                    <h4><i class="fas fa-user-circle fa-fw"></i>@SharedResource.LoginTitle</h4>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="pretty p-icon p-curve p-bigger">
                            <input type="checkbox" asp-for="Input.RememberMe" />
                            <div class="state">
                                <i class="icon fas fa-check"></i>
                                <label asp-for="Input.RememberMe"></label>
                            </div>
                        </div>
                    </div>
                    <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(ViewData.ModelState.IsValid, string.Empty)" />
                    <div class="form-group mb-0 text-right">
                        <button type="submit" class="btn btn-outline-success">@SharedResource.SignIn</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" class="d-block" asp-page="./ForgotPassword">@SharedResource.PasswordForgot</a>
                            <a asp-page="./Register" class="d-block" asp-route-returnUrl="@Model.ReturnUrl">@SharedResource.RegisterANewUser</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>