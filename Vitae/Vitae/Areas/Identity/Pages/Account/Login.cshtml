@page
@model Vitae.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = @SharedResource.SignIn;
}

    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-sm-12 col-md-8 mx-auto my-auto">
                <div class="container">
                    <div class="jumbotron pb-2">
                        <form id="account" method="post" >
                            <h3><i class="fas fa-user-circle fa-fw"></i>@SharedResource.LoginTitle</h3>
                            <hr />
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control dirty-ignore" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control dirty-ignore" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="required">@SharedResource.RememberMe</label>
                                <div class="form-control">
                                    <div class="pretty p-switch p-slim mr-0">
                                        <input type="checkbox" asp-for="Input.RememberMe" class="dirty-ignore" />
                                        <div class="state">
                                            <label asp-for="Input.RememberMe"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(ViewData.ModelState.IsValid, string.Empty)" />

                            <div class="form-group text-right mt-3">
                                <input type="submit" class="btn btn-success" value="@SharedResource.SignIn" />
                            </div>
                            <partial name="_ExternalProviderList" />
                            <div class="form-group mt-3">
                                <p>
                                    <div class="d-block">
                                        <a id="forgot-password" class="" asp-page="./ForgotPassword">@SharedResource.PasswordForgot</a>
                                    </div>
                                    <a asp-page="./Register" class="" asp-route-returnUrl="@Model.ReturnUrl">@SharedResource.RegisterANewUser</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>