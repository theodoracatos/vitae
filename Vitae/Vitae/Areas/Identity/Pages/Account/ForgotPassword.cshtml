@page
@model Vitae.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = SharedResource.PasswordForgot;
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-8 mx-auto my-auto">
            <div class="jumbotron">
                <form method="post">
                    <h3><i class="fas fa-key fa-fw"></i>@SharedResource.PasswordForgot</h3>
                    <hr />
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col mb-0 text-right">
                            <button type="submit" class="btn btn-success">@SharedResource.Request</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>