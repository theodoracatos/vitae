@page
@model Vitae.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = SharedResource.ChangePassword;
}

<h1><i class="fas fa-key fa-fw"></i>@SharedResource.ChangePassword</h1>

<div id="panel">
    <form id="change-password-form" method="post">
        <div class="card mb-4">
            <div class="card-header font-weight-bold">
                @SharedResource.ChangePassword
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Input.OldPassword"></label>
                    <input asp-for="Input.OldPassword" class="form-control" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword"></label>
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(Model.Success, Model.StatusMessage)" />
            </div>
            <div class="card-footer">
                <div class="form-row">
                    <div class="form-group col mb-0 text-right">
                        <button type="submit" class="btn btn-success float-right">@SharedResource.Change</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>