@page
@model Vitae.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = SharedResource.ChangePassword;
}
    <div id="panel">
        <form id="change-password-form" method="post">
            <div class="card">
                <div class="card-header">
                    <h1><i class="fas fa-key fa-fw"></i>@SharedResource.ChangePassword</h1>
                    <p>@SharedResource.ChangePasswordDescription</p>
                </div>
                <div class="card-body">

                    <div class="card">
                        <div class="card-header font-weight-bold">
                            @SharedResource.ChangePassword
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label class="control-label" asp-for="Input.OldPassword"></label>
                                <input asp-for="Input.OldPassword" class="form-control" />
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="Input.NewPassword"></label>
                                <input asp-for="Input.NewPassword" class="form-control" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            @if (string.IsNullOrEmpty(Model.StatusMessage))
                            {
                                <div class="form-group">
                                    <div class="alert alert-info" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <p class="mb-0">@SharedResource.PasswordRequiresDigit</p>
                                        <p class="mb-0">@SharedResource.PasswordRequiresLower</p>
                                        <p class="mb-0">@SharedResource.PasswordRequiresNonAlphanumeric</p>
                                        <p class="mb-0">@SharedResource.PasswordRequiresUpper</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(Model.Success, Model.StatusMessage)" />
                            }
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="form-row">
                        <div class="form-group col mb-0 text-right">
                            <button type="submit" disabled class="btn btn-primary float-right"><i class="fas fa-save fa-fw"></i>@SharedResource.Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>