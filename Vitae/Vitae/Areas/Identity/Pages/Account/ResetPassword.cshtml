@page
@model Vitae.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = SharedResource.ResetPassword;
}

    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-sm-8 mx-auto my-auto">
                <div class="jumbotron">
                    <form id="account" method="post">
                        <h3><i class="fas fa-key fa-fw"></i>@SharedResource.ResetYourPassword</h3>
                        <hr />
                        <div class="form-group">
                            <input asp-for="Input.Code" type="hidden" />
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(ViewData.ModelState.IsValid, string.Empty)" />
                        <div class="form-group col mb-0 text-right">
                            <button type="submit" class="btn btn-outline-success">@SharedResource.Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
