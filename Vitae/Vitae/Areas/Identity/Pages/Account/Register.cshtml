@page
@model Vitae.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = SharedResource.Register;
}

@inject IConfiguration configuration


<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-12 col-md-8 mx-auto my-auto">
            <div class="container">
                <div class="jumbotron">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3><i class="fas fa-user-circle fa-fw"></i>@SharedResource.CreateAccount</h3>
                        <label class="small">@SharedResource.PasswordRules</label>
                        <hr />
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control dirty-ignore" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control dirty-ignore" autocomplete="on" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control dirty-ignore" autocomplete="on" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="text-body">@SharedResource.SecurityCheck</label>
                            <div class="g-recaptcha" data-sitekey="@configuration["reCAPTCHA:SiteKey"]" data-callback="enableSubmit"></div>
                        </div>
                        <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(ViewData.ModelState.IsValid, string.Empty)" />
                        <div class="form-group text-right mb-0">
                            <button id="submitCaptcha" type="submit" class="btn btn-success" disabled>@SharedResource.Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterCssClass { class="account" }

@section Scripts{
    <script src="@Globals.GOOGLE_CAPTCHA_API" async defer></script>
}