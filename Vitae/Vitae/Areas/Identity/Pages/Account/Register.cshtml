@page
@model Vitae.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = SharedResource.Register;
}

    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-6 mx-auto">
                <div class="jumbotron">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3><i class="fas fa-user-circle fa-fw"></i>@SharedResource.CreateAccount</h3>
                        <label class="small">@SharedResource.PasswordRules</label>
                        <hr />
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <partial name="_StatusMessage" model="new KeyValuePair<bool, string>(ViewData.ModelState.IsValid, string.Empty)" />
                        <div class="form-group mb-0 text-right">
                            <button type="submit" class="btn btn-outline-success">@SharedResource.Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>