@page
@model Vitae.Areas.Identity.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="jumbotron">
                <h4><i class="fas fa-user-circle fa-fw"></i>@SharedResource.EmailSent</h4>
                <hr />
                <div class="form-row">
                    <div class="form-group col">
                        <p>
                            @SharedResource.CheckYourEmail
                        </p>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mb-0 text-right">
                        <a id="forgot-password" class="btn btn-outline-success" href="/">@SharedResource.Homepage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>