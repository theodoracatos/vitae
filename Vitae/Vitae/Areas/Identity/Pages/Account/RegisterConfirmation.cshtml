@page
@model Vitae.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = SharedResource.RegisterConfirmation;
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="jumbotron">
                <h3><i class="fas fa-user-circle fa-fw"></i>@SharedResource.RegisterConfirmation</h3>
                <hr />
                <div class="form-row">
                    <div class="form-group col">
                            @SharedResource.CheckYourEmailConfirm
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mb-0 text-right">
                        <a id="forgot-password" class="btn btn-outline-success" href="/">@SharedResource.Homepage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>