@model Vitae.Areas.Manage.Pages.Publications.IndexModel

<div id="panel">
    <div class="card">
        <div class="card-header font-weight-bold">
            <div class="float-left">
                <h1><i class="fas fa-share-alt mr-3"></i>@SharedResource.Publications</h1>
            </div>
        </div>

        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Publications"></label>
                    <div>
                        <button asp-page-handler="AddPublication" style="margin-bottom: 5px" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-success cancel font-weight-bold mr-2" disabled="@(Model.Publications?.Count < Model.MaxPublications ? null : "disabled")"><i class="fas fa-plus mr-2"></i>@SharedResource.Add</button>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Publications.Count; i++)
            {
                <div class="card @(i < Model.Publications.Count - 1 ? "mb-4" : "mb-2")">
                    <div class="card-header card-header-small">
                        <div class="float-left">
                            <a data-toggle="collapse" href="#collapse-@i" aria-expanded="true" aria-controls="collapse-@i" class="d-block text-dark">
                                @(i + 1). @SharedResource.Publication
                                <input type="hidden" asp-for="@Model.Publications[i].Order" />
                                <input type="hidden" asp-for="@Model.Publications[i].PublicationIdentifier" />
                            </a>
                        </div>
                        <div class="float-right">
                            <button asp-page-handler="UpPublication" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel @(i > 0 ? null : "d-none")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownPublication" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel ml-1 @(i == Model.Publications.Count - 1 ? "d-none" : null)"><i class="fas fa-arrow-down"></i></button>
                            <button asp-page-handler="DeletePublication" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-danger cancel ml-1" disabled="@(Model.Publications?.Count <= 0 ? "disabled": null)"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </div>
                    <div class="card-body collapse pb-0 @(Model.Publications[i].Collapsed ? null : "show")" id="collapse-@i">
                        @*<div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="d-flex">
                                    <div class="form-control w-auto flex-fill">
                                        <div class="pretty p-switch p-slim mr-0" onchange="$('#btnCheckUntilNow'+@i).trigger('click');">
                                            <input type="checkbox" name="@(nameof(Publications))[@i].@nameof(PublicationVM.EnablePassword)" value="true" checked="@(Model.Publications[i].EnablePassword ? "checked" : null)" />
                                            <div class="state">
                                                <label class="d-none d-sm-block" asp-for="@Model.Publications[i].EnablePassword"></label><label class="d-sm-none"></label>
                                                <input type="hidden" asp-for="@Model.Publications[i].EnablePassword" />
                                            </div>
                                        </div>
                                        <button id="btnEnablePassword@(i)" asp-page-handler="ChangeEnablePassword" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-secondary cancel d-none"></button>
                                    </div>
                                    @if (@Model.Publications[i].EnablePassword)
                                    {
                                        <label class="control-label" asp-for="@Model.Publications[i].Password"></label>
                                        <input class="form-control" type="text" asp-for="@Model.Publications[i].Password" />
                                        <span asp-validation-for="@Model.Publications[i].Password" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="@Model.Publications[i].Password" type="hidden" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="pretty p-switch p-slim mr-0" onchange="$('#btnCheckUntilNow'+@i).trigger('click');">
                                    <input type="checkbox" name="@(nameof(Publications))[@i].@nameof(PublicationVM.Anonymize)" value="true" checked="@(Model.Publications[i].Anonymize ? "checked" : null)" />
                                    <div class="state">
                                        <label class="d-none d-sm-block" asp-for="@Model.Publications[i].Anonymize"></label><label class="d-sm-none"></label>
                                        <input type="hidden" asp-for="@Model.Publications[i].Anonymize" />
                                    </div>
                                </div>
                            </div>
                        </div>*@
                    </div>
                </div>
                @if (i < Model.Publications.Count - 1)
                {<hr />}
            }
        </div>
        <partial name="_CardFooter" model="@Model" />
        <button id="btnSelectChange" asp-page-handler="SelectChange" data-ajax="true" data-ajax-update="#panel" class="btn btn-secondary cancel d-none"></button>
    </div>
</div>