@model Vitae.Areas.Manage.Pages.Awards.IndexModel

<div id="panel">
    <div class="card">
        <div class="card-header font-weight-bold">
            <h1><i class="fas fa-trophy fa-fw"></i>@SharedResource.Awards</h1>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Awards"></label>
                    <div>
                        <button asp-page-handler="AddAward" style="margin-bottom: 5px" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-success cancel font-weight-bold" disabled="@(Model.Awards?.Count < Model.MaxAwards ? null : "disabled")"><i class="fas fa-plus mr-2"></i>@SharedResource.Add</button>
                        <div class="form-control d-sm-block d-md-inline mt-2">
                            <div class="pretty p-switch p-slim">
                                <input type="checkbox" name="@nameof(Model.AddToTop)" value="true" checked="@(Model.AddToTop ? "checked" : null)" />
                                <div class="state">
                                    <label asp-for="@Model.AddToTop">@SharedResource.AddToTop</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Awards.Count; i++)
            {
        <div class="card @(i < Model.Awards.Count - 1 ? "mb-4" : "mb-2")">
            <div class="card-header card-header-small">
                <div class="float-left">
                    @(i + 1). @SharedResource.Award
                </div>
                <div class="float-right">
                    <button asp-page-handler="UpAward" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-success cancel @(i > 0 ? null : "d-none")"><i class="fas fa-arrow-up"></i></button>
                    <button asp-page-handler="DownAward" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-secondary cancel ml-1 @(i == Model.Awards.Count - 1 ? "d-none" : null)"><i class="fas fa-arrow-down"></i></button>
                    <button asp-page-handler="DeleteAward" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-danger cancel ml-1" disabled="@(Model.Awards?.Count <= 0 ? "disabled": null)"><i class="far fa-trash-alt"></i></button>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="control-label" asp-for="@Model.Awards[i].Name"></label>
                        <input class="form-control" type="text" asp-for="@Model.Awards[i].Name" />
                        <span asp-validation-for="@Model.Awards[i].Name" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.Awards[i].Order" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="control-label" asp-for="@Model.Awards[i].Description"></label>
                        <textarea rows="3" asp-for="@Model.Awards[i].Description" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Awards[i].Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Awards[i].AwardedFrom"></label>
                        <input class="form-control" type="text" asp-for="@Model.Awards[i].AwardedFrom" />
                        <span asp-validation-for="@Model.Awards[i].AwardedFrom" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Awards[i].Link"></label>
                        <input class="form-control" type="text" asp-for="@Model.Awards[i].Link" />
                        <span asp-validation-for="@Model.Awards[i].Link" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Awards[i].Month"></label>
                        <div class="d-flex">
                            <select asp-for="@Model.Awards[i].Month" class="form-control flex-fill mr-2" asp-items="@(new SelectList(@Model.Months, "MonthCode", "Name"))" onchange="$('#btnChangeDate').trigger('click');"></select>
                            <select asp-for="@Model.Awards[i].Year" class="form-control w-auto flex-fill" asp-items="@(new SelectList(Enumerable.Range(Globals.YEAR_START, DateTime.Now.Year - Globals.YEAR_START + 1).Reverse().Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Text", "Value"))"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            @if (i < Model.Awards.Count - 1)
            {<hr />}
            }
        </div>
            <div class="card-footer">
                <div class="form-row">
                    <div class="form-group col mb-0 text-right">
                        <button type="submit" class="btn btn-success float-right">@SharedResource.Save</button>
                    </div>
                </div>
            </div>
        </div>
</div>