@model Vitae.Areas.Manage.Pages.Awards.IndexModel

<div id="panel">
    <div class="card">
        <partial name="_CardHeader" model="@(new Tuple<BasePageModel, string, string, string>(Model, "fas fa-trophy", SharedResource.Awards, SharedResource.AwardsDescription))" />

        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Awards"></label>
                    <div>
                        <button asp-page-handler="AddAward" style="margin-bottom: 5px" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-success cancel font-weight-bold mr-2" disabled="@(Model.Awards?.Count < Model.MaxAwards ? null : "disabled")"><i class="fas fa-plus mr-2"></i>@SharedResource.Add</button>
                        <div class="form-control d-sm-block d-md-inline mt-2 mr-2">
                            <div class="pretty p-switch p-slim mr-0">
                                <input type="checkbox" name="@nameof(Model.AddToTop)" class="dirty-ignore cancel" value="true" checked="@(Model.AddToTop ? "checked" : null)" />
                                <div class="state">
                                    <label asp-for="@Model.AddToTop">@SharedResource.AddToTop</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-control d-sm-block d-md-inline mt-2">
                            <div class="pretty p-switch p-slim mr-0 mr-0">
                                <input type="checkbox" name="@nameof(Model.Collapsed)" class="dirty-ignore cancel" value="true" onclick="$('#btnCollapse').click()" checked="@(Model.Collapsed ? "checked" : null)" />
                                <div class="state">
                                    <label asp-for="@Model.Collapsed">@SharedResource.Collapse</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Awards.Count; i++)
            {
                <div class="card @(i < Model.Awards.Count - 1 ? "mb-4" : "mb-2")">
                    <div class="card-header card-header-small">
                        <div class="float-left line-height-2">
                            <a data-toggle="collapse" href="#collapse-@i" aria-expanded="true" aria-controls="collapse-@i" class="d-block text-dark">
                                @(i + 1). @SharedResource.Award
                                <input type="hidden" asp-for="@Model.Awards[i].Collapsed" />
                            </a>
                        </div>
                        <div class="float-right">
                            <button asp-page-handler="UpAward" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel @(i > 0 ? null : "d-none")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownAward" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel ml-1 @(i == Model.Awards.Count - 1 ? "d-none" : null)"><i class="fas fa-arrow-down"></i></button>
                            <button asp-page-handler="CopyAward" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel ml-1" disabled="@(Model.Awards.Count < Model.MaxAwards ? null: "disabled")"><i class="fas fa-copy"></i></button>
                            <button asp-page-handler="DeleteAward" asp-route-order="@i" data-confirm-text="@string.Format(SharedResource.ConfirmDelete, $"\"{SharedResource.Award} {(i+1)}\"")" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-danger cancel dirty-ignore confirmation ml-1" disabled="@(Model.Awards?.Count <= 0 ? "disabled": null)"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </div>
                    <div class="card-body collapse pb-0 @(Model.Awards[i].Collapsed ? null : "show")" id="collapse-@i">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" asp-for="@Model.Awards[i].Name"></label>
                                <input class="form-control" type="text" asp-for="@Model.Awards[i].Name" />
                                <span asp-validation-for="@Model.Awards[i].Name" class="text-danger"></span>
                                <input type="hidden" asp-for="@Model.Awards[i].Order" />
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" asp-for="@Model.Awards[i].Link"></label>
                                <input class="form-control" type="text" asp-for="@Model.Awards[i].Link" />
                                <span asp-validation-for="@Model.Awards[i].Link" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label class="control-label" asp-for="@Model.Awards[i].Description"></label>
                                <textarea rows="2" asp-for="@Model.Awards[i].Description" class="form-control"></textarea>
                                <span asp-validation-for="@Model.Awards[i].Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="control-label" asp-for="@Model.Awards[i].AwardedFrom"></label>
                                <input class="form-control" type="text" asp-for="@Model.Awards[i].AwardedFrom" />
                                <span asp-validation-for="@Model.Awards[i].AwardedFrom" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label" asp-for="@Model.Awards[i].Month"></label>
                                <div class="d-flex">
                                    <select asp-for="@Model.Awards[i].Month" class="form-control flex-fill mr-2" asp-items="@(new SelectList(@Model.Months, "MonthCode", "Name"))" onchange="$('#btnChangeDate').trigger('click');"></select>
                                    <select asp-for="@Model.Awards[i].Year" class="form-control w-auto flex-fill" asp-items="@(new SelectList(Enumerable.Range(Globals.YEAR_START, DateTime.Now.Year - Globals.YEAR_START + 1).Reverse().Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Text", "Value"))"></select>
                                </div>
                                <div>
                                    <span asp-validation-for="@Model.Awards[i].Year" class="text-danger d-block"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (i < Model.Awards.Count - 1)
                {<hr />}
            }
        </div>
        <partial name="_CardFooter" model="@Model" />
    </div>
</div>