@model BasePageModel

<div class="card-footer">
    <div class="form-row">
        <div class="form-group col mb-0 text-right">
            <button id="btnCollapse" asp-page-handler="Collapse" data-ajax="true" data-ajax-update="#panel" class="d-none cancel dirty-ignore"></button>
            <button id="btnLanguageChange" asp-page-handler="LanguageChange" data-ajax="true" data-ajax-update="#panel" class="btn btn-secondary dirty-ignore cancel d-none"></button>
            <button asp-disabled="@(!Model.HasUnsafedChanges)" type="submit" class="btn btn-primary float-right"><i class="fas fa-save fa-fw"></i>@SharedResource.Save</button>
            <input type="hidden" class="dirty-ignore" asp-for="@Model.HasUnsafedChanges" />
        </div>
    </div>
</div>