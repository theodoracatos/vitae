@model Vitae.Areas.Manage.Pages.Sociallinks.IndexModel

<div id="panel">
    <div class="card">
        <div class="card-header font-weight-bold">
            <h1><i class="fas fa-link fa-fw"></i>@SharedResource.SocialLinks</h1>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.SocialLinks"></label>
                    <div>
                        <button asp-page-handler="AddSocialLink" style="margin-bottom: 5px" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-success cancel font-weight-bold mr-2" disabled="@(Model.SocialLinks?.Count < Model.MaxSocialLinks ? null : "disabled")"><i class="fas fa-plus mr-2"></i>@SharedResource.Add</button>
                        <div class="form-control d-sm-block d-md-inline mt-2">
                            <div class="pretty p-switch p-slim mr-0">
                                <input type="checkbox" name="@nameof(Model.AddToTop)" value="true" checked="@(Model.AddToTop ? "checked" : null)" />
                                <div class="state">
                                    <label asp-for="@Model.AddToTop">@SharedResource.AddToTop</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.SocialLinks.Count; i++)
            {
        <div class="card @(i < Model.SocialLinks.Count - 1 ? "mb-4" : "mb-2")">
            <div class="card-header card-header-small">
                <div class="float-left">
                    <a data-toggle="collapse" href="#collapse-@i" aria-expanded="true" aria-controls="collapse-@i" class="d-block text-dark">
                        @(i + 1). @SharedResource.SocialLink
                    </a>
                </div>
                <div class="float-right">
                    <button asp-page-handler="UpSocialLink" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel @(i > 0 ? null : "d-none")"><i class="fas fa-arrow-up"></i></button>
                    <button asp-page-handler="DownSocialLink" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel ml-1 @(i == Model.SocialLinks.Count - 1 ? "d-none" : null)"><i class="fas fa-arrow-down"></i></button>
                    <button asp-page-handler="CopySocialLink" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-dark cancel ml-1" disabled="@(Model.SocialLinks.Count < Model.MaxSocialLinks ? null: "disabled")"><i class="fas fa-copy"></i></button>
                    <button asp-page-handler="DeleteSocialLink" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-danger cancel ml-1" disabled="@(Model.SocialLinks?.Count <= 0 ? "disabled": null)"><i class="far fa-trash-alt"></i></button>
                </div>
            </div>
            <div class="card-body collapse show pb-0" id="collapse-@i">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.SocialLinks[i].SocialPlatform"></label>
                        <select asp-for="@Model.SocialLinks[i].SocialPlatform" class="form-control" onchange="$('#btnSelectChange').trigger('click')" asp-items="@(new SelectList(Html.GetEnumSelectList<SocialPlatform>().OrderBy(sp => sp.Text).Where(s => int.Parse(s.Value) == (int)Model.SocialLinks[i].SocialPlatform || !Model.SocialLinks.Select(sl => (int)sl.SocialPlatform).ToList().Contains(int.Parse(s.Value))), "Value", "Text"))">
                            <option value="" selected="selected" disabled="disabled">-- @SharedResource.Select --</option>
                        </select>
                        <span asp-validation-for="@Model.SocialLinks[i].SocialPlatform" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.SocialLinks[i].Order" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.SocialLinks[i].Link"></label>
                        <input class="form-control" type="text" asp-for="@Model.SocialLinks[i].Link" />
                        <span asp-validation-for="@Model.SocialLinks[i].Link" class="text-danger"></span>
                    </div>
                </div>
            </div>
            </div>
            @if (i < Model.SocialLinks.Count - 1)
            {<hr />}
            }
        </div>
            <div class="card-footer">
                <div class="form-row">
                    <div class="form-group col mb-0 text-right">
                        <button id="btnSelectChange" asp-page-handler="SelectChange" data-ajax="true" data-ajax-update="#panel" class="btn btn-secondary cancel d-none"></button>
                        <button type="submit" class="btn btn-success float-right" disabled="disabled">@SharedResource.Save</button>
                    </div>
                </div>
            </div>
        </div>
</div>