@model Vitae.Areas.Manage.Pages.Skills.IndexModel

<div id="panel">
    <div class="card">
        <div class="card-header font-weight-bold">
            <h1><i class="fas fa-tools fa-fw"></i>@SharedResource.Skills</h1>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Skills"></label>
                    <div>
                        <button asp-page-handler="AddSkill" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(Model.Skills?.Count < Model.MaxSkills ? null : "disabled")"><i class="fas fa-plus"></i></button>
                        <button asp-page-handler="RemoveSkill" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(Model.Skills?.Count <= 0 ? "disabled": null)"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Skills.Count; i++)
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label mr-1">@(i + 1).</label><label class="control-label" asp-for="@Model.Skills[i].Category"></label>
                        <input class="form-control" type="text" asp-for="@Model.Skills[i].Category" />
                        <span asp-validation-for="@Model.Skills[i].Category" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.Skills[i].Order" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Skills[i].Skillset"></label>
                        <input class="form-control tagsinput" data-role="tagsinput" type="text" asp-for="@Model.Skills[i].Skillset" />
                        <small class="d-block">@SharedResource.EnterSkill</small>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mt-1">
                        <div class="text-right">
                            <button asp-page-handler="UpSkill" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(i > 0 ? null : "disabled")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownSkill" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(i == Model.Skills.Count - 1 ? "disabled": null)"><i class="fas fa-arrow-down"></i></button>
                        </div>
                    </div>
                </div>
                @if (i < Model.Skills.Count - 1)
                {
                    <div class="form-row">
                        <div class="form-group col">
                            <hr />
                        </div>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            <div class="form-row">
                <div class="form-group col mb-0 text-right">
                    <button type="submit" class="btn btn-outline-success float-right">@SharedResource.Save</button>
                </div>
            </div>
        </div>
    </div>
</div>