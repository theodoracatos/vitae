@model Vitae.Areas.Manage.Pages.Experience.IndexModel

<div id="panel">
    <div class="card mb-4">
        <div class="card-header font-weight-bold">
            @SharedResource.Experience
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Experiences"></label>
                    <div>
                        <button asp-page-handler="AddExperience" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(Model.Experiences?.Count < Model.MaxExperiences ? null : "disabled")"><i class="fas fa-plus"></i></button>
                        <button asp-page-handler="RemoveExperience" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(Model.Experiences?.Count <= 0 ? "disabled": null)"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Experiences.Count; i++)
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label mr-1">@(i + 1).</label><label class="control-label" asp-for="@Model.Experiences[i].CompanyName"></label>
                        <input class="form-control" type="text" asp-for="@Model.Experiences[i].CompanyName" />
                        <span asp-validation-for="@Model.Experiences[i].CompanyName" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.Experiences[i].Order" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Experiences[i].Link"></label>
                        <input class="form-control" type="text" asp-for="@Model.Experiences[i].Link" />
                        <span asp-validation-for="@Model.Experiences[i].Link" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Experiences[i].CountryCode"></label>
                        <select asp-for="@Model.Experiences[i].CountryCode" class="form-control" onchange="$('#btnChangeCountry').trigger('click');" asp-items="@(new SelectList(@Model.Countries.Where(c => c.CountryCode == Model.Experiences[i].CountryCode || !Model.Experiences.Select(e => e.CountryCode).Contains(c.CountryCode)), "CountryCode", "Name"))">
                            <option value="" selected="selected" disabled="disabled">-- @SharedResource.Select --</option>
                        </select>
                        <span asp-validation-for="@Model.Experiences[i].CountryCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Experiences[i].City"></label>
                        <input class="form-control" type="text" asp-for="@Model.Experiences[i].City" />
                        <span asp-validation-for="@Model.Experiences[i].City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="control-label" asp-for="@Model.Experiences[i].JobTitle"></label>
                        <input class="form-control" type="text" asp-for="@Model.Experiences[i].JobTitle" />
                        <span asp-validation-for="@Model.Experiences[i].JobTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="control-label" asp-for="@Model.Experiences[i].Resumee"></label>
                        <textarea rows="3" asp-for="@Model.Experiences[i].Resumee" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Experiences[i].Resumee" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Experiences[i].Start_Month"></label>
                        <div class="d-flex">
                            <select asp-for="@Model.Experiences[i].Start_Month" class="form-control flex-fill mr-2" asp-items="@(new SelectList(@Model.Months, "MonthCode", "Name"))" onchange="$('#btnChangeDate').trigger('click');"></select>
                            <select asp-for="@Model.Experiences[i].Start_Year" class="form-control w-auto flex-fill" asp-items="@(new SelectList(Enumerable.Range(Constants.YEAR_START, DateTime.Now.Year - Constants.YEAR_START + 1).Reverse().Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Text", "Value"))"></select>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Experiences[i].End_Month"></label>
                        <div class="d-flex">
                            <div class="form-control w-auto flex-fill">
                                <div class="pretty p-switch p-slim" onchange="$('#btnCheckUntilNow'+@i).trigger('click');">
                                    <input asp-for="@Model.Experiences[i].UntilNow" type="checkbox" data-ajax="true" data-ajax-update="#panel" />
                                    <div class="state">
                                        <label asp-for="@Model.Experiences[i].UntilNow"></label>
                                    </div>
                                </div>
                                <button id="btnCheckUntilNow@(i)" asp-page-handler="ChangeUntilNow" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-secondary cancel d-none"></button>
                            </div>
                            @if (!@Model.Experiences[i].UntilNow)
                            {
                                <select asp-for="@Model.Experiences[i].End_Month" class="form-control flex-fill ml-2 mr-2" asp-items="@(new SelectList(@Model.Months, "MonthCode", "Name"))" onchange="$('#btnChangeDate').trigger('click');"></select>
                                <select asp-for="@Model.Experiences[i].End_Year" class="form-control w-auto flex-fill" asp-items="@(new SelectList(Enumerable.Range(Constants.YEAR_START, DateTime.Now.Year - Constants.YEAR_START + 2).Reverse().Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Text", "Value"))"></select>
                            }
                            else
                            {
                                <input asp-for="@Model.Experiences[i].End_Month" type="hidden" />
                                <input asp-for="@Model.Experiences[i].End_Year" type="hidden" />
                            }
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mt-1">
                        <div class="text-right">
                            <button asp-page-handler="UpExperience" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(i > 0 ? null : "disabled")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownExperience" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(i == Model.Experiences.Count - 1 ? "disabled": null)"><i class="fas fa-arrow-down"></i></button>
                        </div>
                    </div>
                </div>
                @if (i < Model.Experiences.Count - 1)
                {
                    <div class="form-row">
                        <div class="form-group col">
                            <hr />
                        </div>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            <div class="form-row">
                <div class="form-group col mb-0 text-right">
                    <button id="btnChangeCountry" asp-page-handler="ChangeCountry" data-ajax="true" data-ajax-update="#panel" class="btn btn-secondary cancel d-none"></button>
                    <button type="submit" class="btn btn-outline-success float-right">@SharedResource.Save</button>
                </div>
            </div>
        </div>
    </div>
</div>