@model Vitae.Areas.Manage.Pages.Abouts.IndexModel

    <div id="panel">
        <div class="card">
            <div class="card-header font-weight-bold">

                <div class="float-left">
                    <h1>
                        <i class="fas fa-user-edit mr-3"></i>@SharedResource.About
                    </h1>
                </div>
                <div class="float-right">
                    <i class="fas fa-flag fa-fw"></i><label class="control-label" for="lang">@SharedResource.Language</label>
                    <select name="lang" class="form-control">
                        <option>
                            Deutsch
                        </option>
                        <option>
                            Englisch
                        </option>
                    </select>
                </div>
            </div>
            <div class="card-body">
                <div class="grouping">
                    <div class="form-row">
                        <div class="form-group col">
                            <label class="control-label" asp-for="@Model.Abouts.First().AcademicTitle"></label>
                            <input class="form-control" type="text" asp-for="@Model.Abouts.First().AcademicTitle" />
                            <span asp-validation-for="@Model.Abouts.First().AcademicTitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label class="control-label" asp-for="@Model.Abouts.First().Slogan"></label>
                            <textarea rows="2" asp-for="@Model.Abouts.First().Slogan" class="form-control"></textarea>
                            <span asp-validation-for="@Model.Abouts.First().Slogan" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label class="control-label" asp-for="@Model.Abouts.First().Photo"></label>
                            <div id="divSelector" class="form-group bd-form-group @(string.IsNullOrEmpty(@Model.Abouts.First().Photo) ? null : "d-none")">
                                <button class="btn btn-secondary" type="button" onclick="$('#imgInput').trigger('click')">@SharedResource.Browse...</button>
                                <div>
                                    <span asp-validation-for="@Model.Abouts.First().Photo" class="text-danger"></span>
                                </div>
                            </div>
                            <div id="divPreview" class="form-group bd-form-group @(string.IsNullOrEmpty(@Model.Abouts.First().Photo) ? "d-none" : "d-flex")">
                                <div class="cropContainer">
                                    <div class="input-group">
                                        <img id="imgPreview" class="imgPreview" src="@Model.Abouts.First().Photo" />
                                    </div>
                                </div>
                                <div class="d-inline-block align-top">
                                    <button id="btnRemoveImage" type="button" class="btn btn-danger d-block flex-fill ml-2">
                                        <i class="far fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col mb-0">
                            <label class="control-label" asp-for="@Model.Abouts.First().Vfile.Content"></label>
                            <div class="bd-form-group">
                                <input id="uploadedFile" type="file" asp-for="@Model.Abouts.First().Vfile.Content" class="@(Model.Abouts.First().Vfile?.FileName == null ? "filer" : "d-none")" />
                                <div class="uploadedFile @(Model.Abouts.First().Vfile?.FileName == null ? "d-none" : null)">
                                    <a class="btn btn-secondary" asp-page-handler="OpenFile" asp-route-identifier="@Model.Abouts.First().Vfile?.Identifier" title="@Model.Abouts.First().Vfile?.FileName">
                                        <i class="far fa-file-pdf fa-1x fa-fw"></i>
                                        @Model.Abouts.First().Vfile?.FileName
                                    </a>
                                    <div class="ml-1 d-inline">
                                        <button asp-page-handler="RemoveFile" data-ajax="true" data-ajax-update="#panel" class="btn btn-danger cancel"><i class="far fa-trash-alt"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-row">
                    <div class="form-group col mb-0 text-right">
                        <input type="hidden" asp-for="@Model.Abouts.First().Vfile.FileName" />
                        <input type="hidden" asp-for="@Model.Abouts.First().Vfile.Identifier" />
                        <input type="text" asp-for="@Model.Abouts.First().Photo" class="imgPhoto invisible" />
                        <input id="imgInput" type="file" class="invisible" accept="image/jpeg, image/png" style="height:0; width: 0" />
                        <button type="submit" class="btn btn-primary float-right" disabled="disabled"><i class="fas fa-save fa-fw"></i>@SharedResource.Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>