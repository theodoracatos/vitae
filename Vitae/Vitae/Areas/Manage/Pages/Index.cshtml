@page
@model Vitae.Areas.Manage.Pages.IndexModel
@{
    ViewData["Title"] = SharedResource.Homepage;
}

<h1>@SharedResource.Dashboard</h1>

<div>
    <canvas id="myChart" width="400" height="400"></canvas>
</div>

@section Scripts {

<script>
$(document).ready(function () {
var ctx = document.getElementById('myChart').getContext('2d');
    var model = @Html.Raw(Json.Serialize(Model.ChartData));

    //If Model is a List<>, model is an array, you need to loop it to get data
    var xAxis = [];
    var yAxis = [];

    alert( @Html.Raw(Json.Serialize(@Model.ChartData)));
    $.each(model.Data_Axis_X, function (index, item) {
        xAxis.push(item.toString());
    });
    $.each(model.Data_Axis_Y, function (index, item) {
        yAxis.push(item.toString());
    }).promise().done(function () { 
     var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: xAxis,
            datasets: [{
                label: '# of Votes',
                data: yAxis,
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
    });
});

</script>
}