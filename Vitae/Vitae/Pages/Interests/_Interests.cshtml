@model Vitae.Pages.Interests.IndexModel

<div id="panel">
    <div class="card mb-4">
        <div class="card-header font-weight-bold">
            @SharedResource.Interests
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Interests"></label>
                    <div>
                        <button asp-page-handler="AddInterest" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(Model.Interests?.Count < Model.MaxInterests ? null : "disabled")"><i class="fas fa-plus"></i></button>
                        <button asp-page-handler="RemoveInterest" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(Model.Interests?.Count <= 0 ? "disabled": null)"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Interests.Count; i++)
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label mr-1">@(i + 1).</label><label class="control-label" asp-for="@Model.Interests[i].Name"></label>
                        <input class="form-control" type="text" asp-for="@Model.Interests[i].Name" />
                        <span asp-validation-for="@Model.Interests[i].Name" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.Interests[i].Order" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Interests[i].Link"></label>
                        <input class="form-control" type="text" asp-for="@Model.Interests[i].Link" />
                        <span asp-validation-for="@Model.Interests[i].Link" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="control-label" asp-for="@Model.Interests[i].Description"></label>
                        <textarea asp-for="@Model.Interests[i].Description" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Interests[i].Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mt-1">
                        <div class="text-right">
                            <button asp-page-handler="UpInterest" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(i > 0 ? null : "disabled")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownInterest" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(i == Model.Interests.Count - 1 ? "disabled": null)"><i class="fas fa-arrow-down"></i></button>
                        </div>
                    </div>
                </div>
                @if (i < Model.Interests.Count - 1)
                {
                    <div class="form-row">
                        <div class="form-group col">
                            <hr />
                        </div>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            <div class="form-row">
                <div class="form-group col mb-0 text-right">
                    <button type="submit" class="btn btn-outline-success float-right">@SharedResource.Save</button>
                </div>
            </div>
        </div>
    </div>
</div>