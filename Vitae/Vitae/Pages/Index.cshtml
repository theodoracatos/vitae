@page
@model IndexModel
@{
    ViewData["Title"] = SharedResource.Homepage;
}

<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-xl-6 text-left my-auto">
            <div class="ml-5 mr-5">
                <div class="bg-white-opaque p-5 ml-5 mr-5 mb-5 rounded shadow">
                    <h1>@(CodeHelper.GetStaticPropValue(typeof(SharedResource), $"AdTextA{new Random().Next() % 3}"))</h1>
                    <h2 class="mb-5">@SharedResource.AdTextB0</h2>
                    <div class="form-group mt-5">
                        <a href="/Identity/Account/Register" class="btn btn-lg btn-success">@SharedResource.Register</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 d-none d-xl-block text-center my-auto">
            <div class="ml-5 mr-5">
                    <div class="mr-5">
                        <img src="~/img/Preview.png" alt="Vitae" class="fit-image" />
                    </div>
            </div>
        </div>
    </div>
</div>
