@page  "{StatusCode?}"
@model ErrorModel
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = SharedResource.Error;
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-8 mx-auto my-auto">
            <div class="jumbotron">
                <form method="post">
                    <h4><i class="fa fa-heart-broken fa-fw"></i>@Model.Code - @Model.Message</h4>
                    <hr />
                    <div class="form-row">
                        <div class="form-group col">
                            <p class="text-danger">
                                @Model.Message
                                <br />
                                <code>@Model.Method @Model.Origin</code>
                            </p>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col mb-0 text-right">
                            <a id="forgot-password" class="btn btn-danger" href="javascript:history.back()">@SharedResource.Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>