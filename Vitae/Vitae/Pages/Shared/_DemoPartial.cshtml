@model Vitae.Pages.DemoModel

<div class="card-header">
    Ajax
</div>
<div class="card-body">
    <div class="form-group">
        <label class="control-label" asp-for="@Model.Age"></label>
        <input class="form-control" type="text" asp-for="@Model.Age" />
        <small class="form-text text-muted">This is a U30 club</small>
        <span asp-validation-for="@Model.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="pretty p-icon p-curve">
            <input type="checkbox" name="@nameof(Model.Gender)" value="true" @(Model.Gender ? "checked" : "") />
            <div class="state">
                <i class="icon fa fa-times"></i>
                <label class="control-label ml-1" asp-for="@Model.Gender"></label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="@Model.Attributes"></label>
        @for (int i = 0; i < Model.Attributes.Count; i++)
        {
            <div class="form-group">
                <input class="form-control" type="text" asp-for="@Model.Attributes[i]" placeholder="Attribute..."   />
            </div>
        }
    </div>
</div>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>