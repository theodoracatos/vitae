<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vitae</title>

    <link rel="stylesheet" href="~/css/landingpage.min.css" />
    <partial name="_Styles" />
</head>

<body id="page-top">
    <header>
        <div id="vitae-indicators" class="carousel slide carousel-fade" data-interval="7000" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active" style="background-image: url('/img/backgrounds/bg0.jpg')"></div>
                <div class="carousel-item" style="background-image: url('/img/backgrounds/bg1.jpg')"></div>
                <div class="carousel-item" style="background-image: url('/img/backgrounds/bg2.jpg')"></div>
                <div class="carousel-item" style="background-image: url('/img/backgrounds/bg3.jpg')"></div>
                <div class="carousel-item" style="background-image: url('/img/backgrounds/bg4.jpg')"></div>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="/">
            <img src="~/img/Logo.png" class="ml-1" title="Vitae" />
        </a>
        <div class="ml-auto">
            <ol class="carousel-indicators">
                <li data-target="#vitae-indicators" data-slide-to="0"></li>
                <li data-target="#vitae-indicators" data-slide-to="1"></li>
                <li data-target="#vitae-indicators" data-slide-to="2"></li>
                <li data-target="#vitae-indicators" data-slide-to="3"></li>
                <li data-target="#vitae-indicators" data-slide-to="4"></li>
            </ol>
            <a href="/Identity/Account/Login" class="text-white mr-4 align-baseline">@SharedResource.SignIn</a>
            <a href="/Identity/Account/Register" class="btn btn-success ml-2 mr-2 align-baseline">@SharedResource.Register</a>
        </div>
    </nav>
    <partial name="_CookieConsentPartial" />

    <div class="mainframe">
        @RenderBody()
    </div>

    <footer class="bg-light">
        <div class="w-100">
            <div class="d-flex justify-content-end small mr-4">
                <div>
                    <a class="js-scroll-trigger" href="#privacy-policy">@SharedResource.PrivacyPolicy</a>
                </div>
                <div class="ml-1 mr-1">&bull;</div>
                <div class="text-muted">Copyright &copy; @DateTime.Now.Year, Vitae &middot; Made with <font color="red">❤</font> in Switzerland</div>
            </div>
        </div>
    </footer>

    <div class="subframe">

        <form class="form-horizontal nodirty" method="post" data-ajax-method="post" enctype="multipart/form-data">
            <div id="privacy-policy" class="d-inline d-none">
                <button asp-page-handler="LoadPartial" asp-route-id="1" data-ajax="true" data-ajax-update="#privacy-policy" data-ajax-loading="#loading1" class="btn btn-sm btn-outline-success cancel invisible partial"></button>
                <i id="loading1" class="fas fa-sync fa-spin d-none m-2"></i>
            </div>
            <div id="partial2" class="d-inline">
                <button asp-page-handler="LoadPartial" asp-route-id="2" data-ajax="true" data-ajax-update="#partial2" data-ajax-loading="#loading2" class="btn btn-sm btn-outline-success cancel invisible partial"></button>
                <i id="loading2" class="fas fa-sync fa-spin d-none m-2"></i>
            </div>
        </form>


        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
    </div>

    <partial name="_Scripts" />
    @RenderSection("Scripts", required: false)
</body>
</html>