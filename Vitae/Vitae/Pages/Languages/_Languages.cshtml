@model Vitae.Pages.Languages.IndexModel

<div id="panel">
    <div class="card mb-4">
        <div class="card-header font-weight-bold">
            @SharedResource.Languages
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.LanguageSkills"></label>
                    <div>
                        <button asp-page-handler="AddLanguageSkill" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(Model.LanguageSkills?.Count < Model.MaxLanguageSkills ? null : "disabled")"><i class="fas fa-plus"></i></button>
                        <button asp-page-handler="RemoveLanguageSkill" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(Model.LanguageSkills?.Count <= 1 ? "disabled": null)"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.LanguageSkills.Count; i++)
            {
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label class="control-label mr-1">@(i + 1).</label><label class="control-label" asp-for="@Model.LanguageSkills[i].LanguageCode"></label>
                        <select asp-for="@Model.LanguageSkills[i].LanguageCode" class="form-control" asp-items="@(new SelectList(@Model.Languages, "LanguageCode", "Name"))">
                            <option value="" selected="selected" disabled="disabled">-- @SharedResource.Select --</option>
                        </select>
                        <span asp-validation-for="@Model.LanguageSkills[i].LanguageCode" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.LanguageSkills[i].Order" />
                    </div>
                    <div class="form-group col-md-8">
                        <div class="ml-3">
                            <label class="control-label d-block" asp-for="@Model.LanguageSkills[i].Rate"></label>
                            <input asp-for="@Model.LanguageSkills[i].Rate" class="rating invisible" />
                            <span asp-validation-for="@Model.LanguageSkills[i].Rate" class="text-danger d-block mt-1"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mt-1">
                        <div class="text-right">
                            <button asp-page-handler="UpLanguageSkill" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(i > 0 ? null : "disabled")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownLanguageSkill" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(i == Model.LanguageSkills.Count - 1 ? "disabled": null)"><i class="fas fa-arrow-down"></i></button>
                        </div>
                    </div>
                </div>
                @if (i < Model.LanguageSkills.Count - 1)
                {
                    <div class="form-row">
                        <div class="form-group col">
                            <hr />
                        </div>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            <div class="form-row">
                <div class="form-group col mb-0 text-right">
                    <button type="submit" class="btn btn-outline-success float-right">@SharedResource.Save</button>
                </div>
            </div>
        </div>
    </div>
</div>