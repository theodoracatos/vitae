@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col infobox">
            <div class="content rounded shadows">
                <h1 class="mt-0"><i class="fas fa-cookie-bite fa-fw mr-1"></i>@SharedResource.PrivacyPolicy</h1>
                <p>
                    @Html.Raw(@SharedResource.PrivacyPolicyText.Replace(Environment.NewLine, "<br />"))
                </p>
            </div>
        </div>
    </div>
</div>