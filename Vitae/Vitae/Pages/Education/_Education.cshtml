@model Vitae.Pages.Education.IndexModel

<div id="panel">
    <div class="card mb-4">
        <div class="card-header font-weight-bold">
            @SharedResource.Education
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col">
                    <label class="control-label" asp-for="@Model.Educations"></label>
                    <div>
                        <button asp-page-handler="AddEducation" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(Model.Educations?.Count < Model.MaxEducations ? null : "disabled")"><i class="fas fa-plus"></i></button>
                        <button asp-page-handler="RemoveEducation" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(Model.Educations?.Count <= 1 ? "disabled": null)"><i class="fas fa-minus"></i></button>
                    </div>
                </div>
            </div>
            @for (int i = 0; i < Model.Educations.Count; i++)
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label mr-1">@(i + 1).</label><label class="control-label" asp-for="@Model.Educations[i].SchoolName"></label>
                        <input class="form-control" type="text" asp-for="@Model.Educations[i].SchoolName" />
                        <span asp-validation-for="@Model.Educations[i].SchoolName" class="text-danger"></span>
                        <input type="hidden" asp-for="@Model.Educations[i].Order" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Educations[i].SchoolLink"></label>
                        <input class="form-control" type="text" asp-for="@Model.Educations[i].SchoolLink" />
                        <span asp-validation-for="@Model.Educations[i].SchoolLink" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="control-label" asp-for="@Model.Educations[i].City"></label>
                        <input class="form-control" type="text" asp-for="@Model.Educations[i].City" />
                        <span asp-validation-for="@Model.Educations[i].City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label class="control-label" asp-for="@Model.Educations[i].Title"></label>
                        <input class="form-control" type="text" asp-for="@Model.Educations[i].Title" />
                        <span asp-validation-for="@Model.Educations[i].Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label class="control-label" asp-for="@Model.Educations[i].Subject"></label>
                        <input class="form-control" type="text" asp-for="@Model.Educations[i].Subject" />
                        <span asp-validation-for="@Model.Educations[i].Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label class="control-label" asp-for="@Model.Educations[i].Grade"></label>
                        <input class="form-control" type="text" asp-for="@Model.Educations[i].Grade" />
                        <span asp-validation-for="@Model.Educations[i].Grade" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="control-label" asp-for="@Model.Educations[i].Resumee"></label>
                        <textarea asp-for="@Model.Educations[i].Resumee" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Educations[i].Resumee" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Educations[i].Education_Start_Month"></label>
                        <div class="d-flex">
                            <select asp-for="@Model.Educations[i].Education_Start_Month" class="form-control flex-fill mr-2" asp-items="@(new SelectList(@Model.Months, "MonthCode", "Name"))" onchange="$('#btnChangeDate').trigger('click');"></select>
                            <select asp-for="@Model.Educations[i].Education_Start_Year" class="form-control w-auto flex-fill" asp-items="@(new SelectList(Enumerable.Range(Model.YearStart, DateTime.Now.Year - Model.YearStart + 1).Reverse().Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Text", "Value"))"></select>
                        </div>
                    </div>
                    <div class="form-group col-md-6">

                        <label class="control-label" asp-for="@Model.Educations[i].Education_End_Month"></label>
                        <div class="d-flex">
                            <select asp-for="@Model.Educations[i].Education_End_Month" class="form-control flex-fill mr-2" asp-items="@(new SelectList(@Model.Months, "MonthCode", "Name"))" onchange="$('#btnChangeDate').trigger('click');"></select>
                            <select asp-for="@Model.Educations[i].Education_End_Year" class="form-control w-auto flex-fill" asp-items="@(new SelectList(Enumerable.Range(Model.YearStart, DateTime.Now.Year - Model.YearStart + 1).Reverse().Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Text", "Value"))"></select>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col mt-1">
                        <div class="text-right">
                            <button asp-page-handler="UpEducation" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-success cancel" disabled="@(i > 0 ? null : "disabled")"><i class="fas fa-arrow-up"></i></button>
                            <button asp-page-handler="DownEducation" asp-route-order="@i" data-ajax="true" data-ajax-update="#panel" class="btn btn-sm btn-outline-danger cancel" disabled="@(i == Model.Educations.Count - 1 ? "disabled": null)"><i class="fas fa-arrow-down"></i></button>
                        </div>
                    </div>
                </div>
                @if (i < Model.Educations.Count - 1)
                {
                    <div class="form-row">
                        <div class="form-group col">
                            <hr />
                        </div>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            <div class="form-row">
                <div class="form-group col mb-0 text-right">
                    <button type="submit" class="btn btn-outline-success float-right">@SharedResource.Save</button>
                </div>
            </div>
        </div>
    </div>
</div>