            <div class="form-row">
                <div class="form-group col-md-5">
                    <label class="control-label" asp-for="@Model.Person.MobileNumber"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@Model.PhonePrefix</span>
                        </div>
                        <input class="form-control" type="text" asp-for="@Model.Person.MobileNumber" />
                    </div>
                    <span asp-validation-for="@Model.Person.MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-7">
                    <label class="control-label" asp-for="@Model.Person.Email"></label>
                    <input class="form-control" type="text" asp-for="@Model.Person.Email" />
                    <span asp-validation-for="@Model.Person.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <button id="btnChangeBirthday" asp-page-handler="ChangeBirthday" data-ajax="true" data-ajax-update="#panel_personal" class="btn btn-secondary cancel d-none"></button>
                    <button id="btnChangeCountry" asp-page-handler="ChangeCountry" data-ajax="true" data-ajax-update="#panel_personal" class="btn btn-secondary cancel d-none"></button>
                    <button asp-page-handler="SavePersonal" data-ajax="true" data-ajax-update="#panel_personal" class="btn btn-success float-right">@SharedResource.Save</button>
                </div>
            </div>
        </div>
